{
  "name": "signo-server",
  "version": "1.1.0",
  "type": "module",
  "description": "Open source, self hosted signing service with PKCS#11 support",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "ts-node-esm --project ./tsconfig.json src/index.ts --log-level debug start -c dev/config.yml",
    "cmd": "ts-node-esm --project ./tsconfig.json src/index.ts",
    "build": "rimraf dist && tsc",
    "typecheck": "tsc --noEmit",
    "lint": "esw --color --ext .ts src",
    "lint:fix": "esw --color --fix --ext .ts src",
    "lint:watch": "esw --color --fix --watch --cache --ext .ts src",
    "generate:migration": "typeorm migration:create",
    "release": "standard-version",
    "release:pre": "standard-version --prerelease"
  },
  "files": [
    "bin/*",
    "dist/**/*"
  ],
  "bin": {
    "signo": "./bin/signo.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gergof/signo.git"
  },
  "author": "Fandly Gergo",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/gergof/signo/issues"
  },
  "homepage": "https://github.com/gergof/signo#readme",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/ejs": "^3.1.5",
    "@types/http-errors": "^2.0.4",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.5",
    "@types/owasp-password-strength-test": "^1.3.2",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-watch": "^8.0.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/multipart": "^8.1.0",
    "@fastify/session": "^10.7.0",
    "@fastify/static": "^6.12.0",
    "@fastify/view": "^8.2.0",
    "@opsvent/hmac": "^1.0.1",
    "@sinclair/typebox": "^0.32.12",
    "asn1js": "^3.0.5",
    "authenticode-sign": "^1.3.0",
    "bcrypt": "^5.1.1",
    "commander": "^11.1.0",
    "connect-typeorm": "^2.0.0",
    "date-fns": "^3.3.1",
    "ejs": "^3.1.9",
    "fastify": "^4.25.2",
    "form-data-encoder": "^4.0.2",
    "formdata-node": "^6.0.3",
    "graphene-pk11": "^2.3.4",
    "http-errors": "^2.0.0",
    "lodash": "^4.17.21",
    "mysql": "^2.18.1",
    "node-fetch": "^3.3.2",
    "owasp-password-strength-test": "^1.3.0",
    "reflect-metadata": "^0.2.1",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.19",
    "winston": "^3.11.0",
    "yaml": "^2.3.4"
  },
  "standard-version": {
    "scripts": {
      "prerelease": "git fetch --all --tags"
    },
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "imp",
        "section": "Improvements"
      },
      {
        "type": "ci",
        "section": "Build/CI"
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "section": "Documentation"
      },
      {
        "type": "refactor",
        "section": "Refactor"
      },
      {
        "type": "test",
        "section": "Testing"
      },
      {
        "type": "perf",
        "section": "Performance"
      },
      {
        "type": "intern",
        "section": "Internal"
      }
    ]
  }
}
